<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {{ collection:posts }}
        <url>
            <loc>{{ permalink }}</loc>
            <lastmod>{{ updated_at format="Y-m-d"}}</lastmod>
            <changefreq>weekly</changefreq>
            <priority>0.5</priority>
        </url>
    {{ /collection:posts }}
</urlset>
